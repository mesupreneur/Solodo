<% layout("layouts/boilerplate") %>
<body>
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="fw-bold display-5">Edit Your Listing</h1>
      <p class="text-muted fs-5">Update your startup listing with the latest details.</p>
    </div>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="mx-auto needs-validation" style="max-width: 850px;" novalidate>
      <!-- Product Info -->
      <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <h5 class="mb-4 fw-bold"><i class="bi bi-pencil-square"></i> Product Information</h5>

        <div class="mb-3">
          <label class="form-label">Product Name</label>
          <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a product name.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a description.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Image Link</label>
          <input type="text" name="listing[image]" value="<%= listing.image %>" class="form-control">
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Invalid image URL.</div>
        </div>
      </div>

      <!-- Business Info -->
      <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <h5 class="mb-4 fw-bold"><i class="bi bi-bar-chart"></i> Business Info</h5>

        <div class="row g-4">
          <div class="col-md-4">
            <label class="form-label">Price (₨)</label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter the price.</div>
          </div>

          <div class="col-md-8">
            <label class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter your location.</div>
          </div>
        </div>

        <div class="mt-3">
          <label class="form-label">Revenue (₨)</label>
          <input type="number" name="listing[revenue]" value="<%= listing.revenue %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter the revenue.</div>
        </div>

        <div class="mt-3">
          <label class="form-label">Users</label>
          <input type="number" name="listing[users]" value="<%= listing.users %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter user count.</div>
        </div>
      </div>

      <!-- Technical Info -->
      <div class="card shadow-sm border-0 rounded-4 p-4 mb-4">
        <h5 class="mb-4 fw-bold"><i class="bi bi-code-slash"></i> Technical & Links</h5>

        <div class="mb-3">
          <label class="form-label">Techstack</label>
          <input type="text" name="listing[techstack]" value="<%= listing.techstack %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter techstack.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Reason for Selling</label>
          <input type="text" name="listing[reason]" value="<%= listing.reason %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a reason.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Demo Link</label>
          <input type="text" name="listing[demolink]" value="<%= listing.demolink %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide demo link.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">LinkedIn</label>
          <input type="text" name="listing[linkedin]" value="<%= listing.linkedin %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter LinkedIn profile link.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">GitHub</label>
          <input type="text" name="listing[github]" value="<%= listing.github %>" class="form-control" required>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter GitHub repo link.</div>
        </div>
      </div>

      <!-- Submit -->
      <div class="text-center">
        <button type="submit" class="btn btn-dark btn-lg px-5 rounded-pill"><i class="bi bi-pencil"></i> Save Changes</button>
      </div>
    </form>
  </div>
</body>
